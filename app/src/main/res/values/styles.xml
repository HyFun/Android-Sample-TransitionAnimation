<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ScaleTheme">
        <item name="android:windowAnimationStyle">@style/ScanAnimation</item>
    </style>

    <style name="ScanAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_scale_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_scale_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_scale_close_exit</item>
    </style>

    <style name="AppTheme.SlideTheme">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_close_exit</item>
    </style>


</resources>
